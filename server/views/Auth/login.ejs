<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!DOCTYPE html>
<html>
<head>
<link rel='stylesheet' href='/Content/login.css' />
<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css"/>
<link
href="https://fonts.googleapis.com/css2?family=Bodoni+Moda+SC:ital,opsz,wght@0,6..96,400..900;1,6..96,400..900&family=Herr+Von+Muellerhoff&display=swap"
rel="stylesheet">
</head>
<body>
    
<main class="container">
    <!--Message Area-->
    <% if(message.length > 0) {%>
        <div class="alert alter-danger">
            <%= message %>
        </div>    
    <%} %>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1>Please Login</h1>
            <form method="post" autocomplete="off">
                <fieldset class="form-group">
                    <!--username,password,displayName,email-->
                    <label for="username"></label>
                    <input type="text" clas="form-control"
                    name="username"
                    placeholder="Enter the username"
                    id="username" required autofocus>
                </fieldset>
                <fieldset class="form-group">
                    <!--username,password,displayName,email-->
                    <label for="password"></label>
                    <input type="password" clas="form-control"
                    name="password"
                    placeholder="Enter the password"
                    id="password" required>
                    or 
                    <a href="/register" class= "btn btn-primary">Register Here</a>
                </fieldset> 
                <fieldset class="form-group text-right">
                    <a href="/">
                    <input type="submit" class="btn btn-success"
                    value="Login"></a>
                    <a href="/">
                    <input type="button" class="btn btn-warning"
                    value="Cancel"></a> 
                </fieldset>
            </form>
        </div>

    </div>
</main>
<%- include ../Partials/footer.ejs%>
